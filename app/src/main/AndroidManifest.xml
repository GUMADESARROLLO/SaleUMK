<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.videumcorp.desarrolladorandroid.navigationdrawerandroiddesignsupportlibrarywithfragments">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />

        <activity
            android:name=".Activity.LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".Activity.PedidoActivity"
            android:label="@string/title_activity_pedido"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.CrearSaleActivity"
            android:label="@string/title_activity_crear_sale"
            android:theme="@style/Base.AppTheme.Pedido" />
        <activity
            android:name=".Activity.FrmCobro_Activity"
            android:label="@string/title_activity_frm_cobro_"
            android:theme="@style/Base.AppTheme" />
        <activity
            android:name=".Activity.ObservacionActivity"
            android:label="@string/title_activity_observacion"
            android:theme="@style/Base.AppTheme" />
        <activity
            android:name=".Activity.AgendaActivity"
            android:label="@string/title_activity_agenda"
            android:theme="@style/Base.AppTheme.ActionBar" />
        <activity android:name=".Activity.TicketActivity" />
        <activity
            android:name=".Activity.DetallesActivity"
            android:label="@string/title_activity_detalles"
            android:theme="@style/Base.AppTheme.ActionBar" />
        <activity
            android:name=".Activity.InfoClientesActivity"
            android:label="@string/title_activity_info_clientes"
            android:theme="@style/Base.AppTheme.ActionBar" />
        <activity
            android:name=".Activity.CalendarioActivity"
            android:label="@string/title_activity_calendario"
            android:theme="@style/Base.AppTheme.ActionBar"></activity>
    </application>

</manifest>