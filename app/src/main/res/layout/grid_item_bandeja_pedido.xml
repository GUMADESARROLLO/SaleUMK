<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    >

    <TextView
        android:id="@+id/Item_PBandeja_Cod"
        android:layout_height="fill_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="@color/UmkAzulOscuro"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="RECIBO"
        android:layout_gravity="left"
        />
    <TextView
        android:id="@+id/Item_PBandeja_Cliente"
        android:layout_height="fill_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="@color/UmkAzulOscuro"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Cliente"
        android:layout_gravity="left"
        />
    <TextView
        android:id="@+id/Item_PBandeja_fecha"
        android:layout_height="fill_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="@color/UmkAzulOscuro"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Fecha"
        android:layout_gravity="left"
        />
    <TextView
        android:id="@+id/Item_PBandeja_Monto"
        android:layout_height="fill_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="@color/UmkAzulOscuro"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="MONTO"
        android:layout_gravity="left"
        />
    <TextView
        android:id="@+id/Item_PBandeja_Estado"
        android:layout_height="fill_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="@color/UmkAzulOscuro"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Estado"
        android:layout_gravity="left"
        />
</LinearLayout>